<Application
    x:Class="LoginSocialDemo.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="using:LoginSocialDemo.ViewModels.Base"
    xmlns:local="using:LoginSocialDemo">
    
    <Application.Resources>
        <base:ViewModelLocator x:Key="Locator"></base:ViewModelLocator>
        <Style TargetType="TextBlock" x:Key="DescriptionTextBlockStyle">
            <Setter Property="FontSize" Value="34"/>
            <Setter Property="FontWeight" Value="Bold"></Setter>
        </Style>
        <Style TargetType="TextBlock" x:Key="ValueTextBlockStyle">
            <Setter Property="FontSize" Value="34"/>
            <Setter Property="FontWeight" Value="ExtraLight"></Setter>
        </Style>

        <SolidColorBrush x:Key="FacebookBlueBackgroundBrush">#3B5998</SolidColorBrush>
        <SolidColorBrush x:Key="GoogleRedBackgroundBrush">#d34836</SolidColorBrush>
        <SolidColorBrush x:Key="MicrosoftBlueBackgroundBrush">#3B5998</SolidColorBrush>
    </Application.Resources>

</Application>
